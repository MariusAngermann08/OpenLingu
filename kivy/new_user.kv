<NewUserPage1>:
    name: "newuser1"
    MDScreen:
        MDBoxLayout:
            orientation: "vertical"

            MDTopAppBar:
                title: "Nickname"
                anchor_title: "center"
                md_bg_color: 1, 1, 1, 1
                specific_text_color: "black"
            
            GridLayout:
                cols: 1
                rows: 3

                padding: 45, 100
                spacing: 12

                MDLabel:
                    text: "Choose a Nickname"
                    multiline: False

                MDTextField:
                    hint_text: "Nickname"
                    cursor_color: 0, 0, 0, 1
                    cursor_width: "2sp"
                    multiline: False
                    mode: "rectangle"
                
                MDRectangleFlatButton:
                    text: "Continue"


