<WelcomeScreen>:
    name: "welcome"
    MDScreen:
        MDFloatLayout:
            md_bg_color: 1, 1, 1, 1
            Image:
                source: "icons/Orange_Dragon.png"
                pos_hint: {"y": 0.25}
            MDLabel:
                text: "Welcome to OpenLingu"
                halign: "center"
                font_size: "40sp"
                pos_hint: {"center_x": 0.5, "center_y": 0.48}       
            MDFloatLayout:
                size_hint: 0.85, 0.08
                md_bg_color: 1, 1, 1, 1
                pos_hint: {"center_x": 0.5, "center_y": 0.32} 
                canvas:
                    Color:
                        rgba: 0.82, 0.78, 0.69, 1
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [25]
                MDTextButton:
                    text: "Anmelden"
                    size_hint: 1, None
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    on_press: app.sign_in_menu()
            MDFloatLayout:
                size_hint: 0.85, 0.08
                md_bg_color: 1, 1, 1, 1
                pos_hint: {"center_x": 0.5, "center_y": 0.22} 
                canvas:
                    Color:
                        rgba: 0.82, 0.78, 0.69, 1
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [25]
                MDTextButton:
                    text: "Registrieren"
                    size_hint: 1, None
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    on_press: app.sign_up_menu()

<Passwordfield>:
    size_hint_y: None
    height: login_password.height
                    
    MDTextField:
        id: login_password
        hint_text: "Passwort"
        password: True
        cursor_color: 0, 0, 0, 1
        cursor_width: "2sp"
        multiline: False
        padding: 15
        mode: "rectangle"

    MDIconButton:
        icon: "eye-off"
        pos_hint: {"center_y": .5}
        pos: login_password.width - self.width + dp(8), 0
        theme_text_color: "Hint"
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            login_password.password = False if login_password.password is True else True
                         

<SignInScreen>:
    name: "signin"
    MDScreen:
        MDBoxLayout:
            orientation: "vertical"

            MDTopAppBar:
                title: "Anmelden"
                anchor_title: "left"
                right_action_items: [["arrow-right", lambda x: app.welcome_menu()]]
                md_bg_color: 1, 1, 1, 1
                specific_text_color: "black"

            GridLayout:
                cols: 1
                rows: 4

                padding: 45, 100

                MDTextField:
                    hint_text: "Email"
                    cursor_color: 0, 0, 0, 1
                    cursor_width: "2sp"
                    multiline: False
                    mode: "rectangle"
                
                Passwordfield:

                MDTextButton:
                    text: "Passwort vergessen?"
                    text_color: 0.82, 0.78, 0.69, 1
                
                MDRectangleFlatButton:
                    text: "Anmelden"
                    on_press: app.main_menu()
                 

<SignUpScreen>:
    name: "signup"
    MDScreen:
        MDBoxLayout:
            orientation: "vertical"

            MDTopAppBar:
                title: "Registrieren"
                left_action_items: [["arrow-left", lambda x: app.welcome_menu()]]
                md_bg_color: 1, 1, 1, 1
                specific_text_color: "black"

            GridLayout:
                cols: 1
                rows: 5

                padding: 45, 100
                
                MDTextField:
                    hint_text: "Benutzername"
                    mode: "rectangle"
                    cursor_color: 0, 0, 0, 1
                    cursor_width: "2sp"
                    multiline: False
                

                MDTextField:
                    hint_text: "Email"
                    mode: "rectangle"
                    cursor_color: 0, 0, 0, 1
                    cursor_width: "2sp"
                    multiline: False
                
                MDTextField:
                    id: register_password
                    hint_text: "Passwort"
                    password: True
                    mode: "rectangle"
                    cursor_color: 0, 0, 0, 1
                    cursor_width: "2sp"
                    multiline: False
                
                MDTextField:
                    hint_text: "Passwort wiederholen"
                    password: True
                    mode: "rectangle"
                    cursor_color: 0, 0, 0, 1
                    cursor_width: "2sp"
                    multiline: False
                
                MDRectangleFlatButton:
                    text: "Registrieren"
                    on_press: app.main_menu()

                