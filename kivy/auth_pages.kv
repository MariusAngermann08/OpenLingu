<WelcomeScreen>:
    name: "welcome"
    MDScreen:
        MDFloatLayout:
            md_bg_color: 1, 1, 1, 1
            Image:
                source: "icons/Orange_Dragon.png"
                pos_hint: {"y": 0.25}
            MDLabel:
                text: "Welcome to OpenLingu"
                halign: "center"
                font_size: "40sp"
                pos_hint: {"center_x": 0.5, "center_y": 0.48}       
            MDFloatLayout:
                size_hint: 0.85, 0.08
                md_bg_color: 1, 1, 1, 1
                pos_hint: {"center_x": 0.5, "center_y": 0.32} 
                canvas:
                    Color:
                        rgba: 0.82, 0.78, 0.69, 1
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [25]
                MDTextButton:
                    text: "Anmelden"
                    size_hint: 1, None
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    on_press: app.sign_in_menu()
            MDFloatLayout:
                size_hint: 0.85, 0.08
                md_bg_color: 1, 1, 1, 1
                pos_hint: {"center_x": 0.5, "center_y": 0.22} 
                canvas:
                    Color:
                        rgba: 0.82, 0.78, 0.69, 1
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [25]
                MDTextButton:
                    text: "Registrieren"
                    size_hint: 1, None
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    on_press: app.sign_up_menu()

                

            




<SignInScreen>:
    name: "signin"
    MDScreen:
        MDBoxLayout:
            orientation: "vertical"

            MDTopAppBar:
                title: "Anmelden"
                left_action_items: [["arrow-left", lambda x: app.welcome_menu()]]
                md_bg_color: 1, 1, 1, 1
                specific_text_color: "black"

            GridLayout:
                cols: 1
                rows: 4

                padding: 45, 100

                MDTextField:
                    hint_text: "Email"
                    cursor_color: 0, 0, 0, 1
                    cursor_width: "2sp"
                    multiline: False
                
                MDTextField:
                    hint_text: "Passwort"
                    password: True
                    cursor_color: 0, 0, 0, 1
                    cursor_width: "2sp"
                    multiline: False
                    padding: 15

                MDTextButton:
                    text: "Passwort vergessen?"
                    text_color: 0.82, 0.78, 0.69, 1
                
                MDRectangleFlatButton:
                    text: "Anmelden"
                    on_press: app.main_menu()
       
            
                
           
                
            


            

