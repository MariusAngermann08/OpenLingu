
    

<MainScreen>:
    name: "main"
    MDBoxLayout:
        orientation: 'vertical'
        
        MDTopAppBar:
            id: top_app_bar
            title: "Openlingu"
            anchor_title: "left"
            right_action_items: [["icons/language.png", lambda x: app.language_menu()], ["cog", lambda x: app.open_settings_menu()]]
            md_bg_color: 0.82, 0.78, 0.69, 1
            specific_text_color: "black"


        MDBottomNavigation:
            #panel_color: "#eeeaea"
            selected_color_background: "orange"
            text_color_active: "black"
            panel_color: 0.82, 0.78, 0.69, 1

            MDBottomNavigationItem:
                name: 'task_screen'
                text: 'Aufgaben'
                icon: 'format-list-numbered'

                MDLabel:
                    text: 'Aufgaben'
                    halingn: 'center'

            MDBottomNavigationItem:
                name: 'lection_screen'
                text: 'Lektionen'
                icon: 'map'

                MDLabel:
                    text: 'Lektionen'
                    halign: 'center'
            
            MDBottomNavigationItem:
                name: 'vocab_screen'
                text: 'Vokabeln'
                icon: 'book'

                MDLabel:
                    text: 'Vokabeln'
                    halign: 'center'
            

            MDBottomNavigationItem:
                name: 'screen 2'
                text: 'Konto'
                icon: 'account'

                MDBoxLayout:
                    orientation: 'vertical'
                    md_bg_color: 0.82, 0.78, 0.69, 1
                    size_hint: 1, 1

                    MDBoxLayout:
                        orientation: "horizontal"
                        size_hint: 1, 0.3
                        md_bg_color: "lightblue"
                        
                        MDRoundFlatButton:
                            md_bg_color: "lightblue"
                            size_hint: 0.4, 1
                            rounded_button: True
                            border_color: "lightblue"

                            FitImage:
                                id: profile_picture
                                source: "icons/Test_Profile.jpg"
                                size_hint: 1, 1
                                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                radius: 50, 50, 50, 50
                        
                        MDLabel:
                            id: user_welcome
                            text: "Placeholder"
                            halign: "center"
                            size_hint: 0.6, 1
                    
                    GridLayout:
                        size_hint: 1, 0.7
                        md_bg_color: "white"

                
            
                        

<SettingsScreen>:
    name: "settings"
    MDScreen:
        MDBoxLayout:
            orientation: "vertical"

            MDTopAppBar:
                title: "Settings"
                left_action_items: [["arrow-left", lambda x: app.main_menu()]]
                md_bg_color: 0.82, 0.78, 0.69, 1
                specific_text_color: "black"

            MDLabel:
                text: "Settings Page"
                halign: "center"

