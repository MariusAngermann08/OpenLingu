
    

<MainScreen>:
    name: "main"
    MDBoxLayout:
        orientation: 'vertical'
        
        MDTopAppBar:
            title: "Openlingu"
            anchor_title: "left"
            right_action_items: [["cog", lambda x: app.language_menu()], ["cog", lambda x: app.open_settings_menu()]]
            md_bg_color: 0.82, 0.78, 0.69, 1
            specific_text_color: "black"


        MDBottomNavigation:
            #panel_color: "#eeeaea"
            selected_color_background: "orange"
            text_color_active: "black"
            panel_color: 0.82, 0.78, 0.69, 1

            MDBottomNavigationItem:
                name: 'task_screen'
                text: 'Aufgaben'
                icon: 'format-list-numbered'

                MDLabel:
                    text: 'Aufgaben'
                    halign: 'center'

            MDBottomNavigationItem:
                name: 'lection_screen'
                text: 'Lektionen'
                icon: 'map'

                MDLabel:
                    text: 'Lektionen'
                    halign: 'center'
            
            MDBottomNavigationItem:
                name: 'vocab_screen'
                text: 'Vokabeln'
                icon: 'book'

                MDLabel:
                    text: 'Vokabeln'
                    halign: 'center'
            

            MDBottomNavigationItem:
                name: 'screen 2'
                text: 'Konto'
                icon: 'account'

                MDLabel:
                    text: 'Konto'
                    halign: 'center'

<SettingsScreen>:
    name: "settings"
    MDScreen:
        MDBoxLayout:
            orientation: "vertical"

            MDTopAppBar:
                title: "Settings"
                left_action_items: [["arrow-left", lambda x: app.backto_main_menu()]]
                md_bg_color: 0.82, 0.78, 0.69, 1
                specific_text_color: "black"

            MDLabel:
                text: "Settings Page"
                halign: "center"
